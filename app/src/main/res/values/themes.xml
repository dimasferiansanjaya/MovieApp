<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieCatalogue" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/red</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorAquaHaze</item>
        <item name="fontFamily">@font/google_sans</item>
    </style>

    <style name="Theme.MovieCatalogue.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/red</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorAquaHaze</item>
        <item name="fontFamily">@font/google_sans</item>
    </style>


    <!-- Toolbar styles. -->
    <style name="AppBar.Default" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Toolbar.Default" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="fontFamily">@font/google_sans</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="titleTextAppearance">@style/TextView.Toolbar</item>
    </style>
    <!-- End of Toolbar styles. -->

    <!--  TextView Styles  -->
    <style name="TextView.Bold" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Toolbar" parent="TextView.Bold">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextView.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="fontFamily">@font/google_sans</item>
    </style>

    <style name="TextView.Title.Section" parent="TextView.Title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="textAllCaps">true</item>
    </style>
    <!--  End of TextView Styles  -->

    <!-- CardView styles. -->
    <style name="CardView.FilledBox" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorAquaHaze</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/colorGallery</item>
        <item name="strokeWidth">1dp</item>
    </style>
    <!-- End of CardView styles. -->

    <!-- SearchView styles. -->
    <style name="SearchView.Default" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/google_sans</item>
        <item name="iconifiedByDefault">false</item>
        <item name="queryBackground">@null</item>
        <item name="searchIcon">@drawable/ic_round_search</item>
    </style>
    <!-- End of SearchView styles. -->

    <!--  Rating Bar styles.  -->
    <style name="RatingBar">
        <item name="colorControlActivated">@color/gold</item>
    </style>
    <!--  End of Rating Bar styles.  -->

    <!-- Chip styles. -->
    <style name="Chip.Default" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipStrokeColor">@color/colorGallery</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>
    <!-- End Chip styles. -->

</resources>